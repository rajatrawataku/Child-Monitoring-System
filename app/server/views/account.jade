#account-form-container.center-vertical
  .row
    .col-lg-6.col-lg-offset-3
      form#account-form.form-horizontal.well(method='post')
        h2
        h6#sub1 Please tell us a little about yourself.
        hr
        .form-group
          label.control-label.col-sm-3 Name
          .col-sm-9
            input#name-tf.form-control(type='text', name='name', value=user.name)
        .form-group
          label.control-label.col-sm-3 Email
          .col-sm-9
            input#email-tf.form-control(type='text', name='email', value=user.email)
        .form-group
          label.control-label.col-sm-3 Location
          .col-sm-9
            select.form-control#country-list(name='country')
               each item in countries
                option(selected=item.name == user.country)= item.name
        #referral-tf.form-group
          label.control-label.col-sm-3 Sponsor ID
          .col-sm-9
            input.form-control(type='text', name='sponsorReferralCode', value=ref)
        //- #parent-tf.form-group
