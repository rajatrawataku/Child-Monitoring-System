        //-     input.form-control(type='text', name='parentReferralCode', value='')
        #option_link-tf.form-group
          label.control-label.col-sm-3 Link
          .col-sm-9
            label.radio-inline
              input(type='radio', name='link',value='left')
              | Left
            label.radio-inline
              input(type='radio', name='link',value='right')
              | Right
        hr
        h6#sub2
        .form-group
          label.control-label.col-sm-3 Username
