
#set-password.modal.show
	.modal-dialog
		.modal-content
			.modal-header
				h4 Reset Password
			.modal-body(style="color:black;")
				form(method="post")#set-password-form.well
					.form-group(style="color:black;")
						label Please enter your new password and PIN
						input.form-control(type="password", name="pass", id='pass-tf',style='color:black;').required
						input.form-control(type="text", name="confirmPass", id='confirmPass',style='color:black;').required
						input.form-control(type="text", name="PIN", id='PIN',style='color:black;').required
						.alert.alert-danger.hide
			.modal-footer
				button(type="submit" form="set-password-form")#set-password-submit.btn.btn-primary Submit
